[
  {
    "id": "r10k",
    "execute-command": "/push-to-r10k.sh",
    "command-working-directory": "/",
    "pass-arguments-to-command":
    [
      {
        "source": "payload",
        "name": "ref"
      }
    ],
    "trigger-rule":
    {
      "or":
      [
        {
          "match":
          {
            "type": "payload-hash-sha1",
            "secret": "%{HOOKS_SECRET}",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        },
        {
          "match":
          {
            "type": "payload-hash-sha1",
            "secret": "%{HOOKS_SECRET}",
            "parameter":
            {
              "source": "header",
              "name": "X-Gogs-Signature"
            }
          }
        },
        {
          "match":
          {
            "type": "payload-hash-sha256",
            "secret": "%{HOOKS_SECRET}",
            "parameter":
            {
              "source": "header",
              "name": "X-Gogs-Signature"
            }
          }
        },
        {
          "match":
          {
            "type": "value",
            "value": "%{HOOKS_SECRET}",
            "parameter":
            {
              "source": "payload",
              "name": "secret"
            }
          }
        }
      ]
    }
  }
]
