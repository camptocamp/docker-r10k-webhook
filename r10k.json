[
	{
		"id": "r10k",
		"execute-command": "/push-to-r10k.sh",
		"command-working-directory": "/",
		"pass-arguments-to-command":
		[
      {
        "source": "payload",
        "name": "ref"
      }
		],
		"trigger-rule":
		{
			"and":
			[
				{
					"match":
					{
						"type": "payload-hash-sha1",
						"secret": "%{HOOKS_SECRET}",
						"parameter":
						{
							"source": "header",
							"name": "X-Hub-Signature"
						}
					}
				},
				{
					"match":
					{
						"type": "value",
						"value": "refs/heads/master",
						"parameter":
						{
							"source": "payload",
							"name": "ref"
						}
					}
				}
			]
		}
	}
]
